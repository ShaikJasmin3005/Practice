/*output:Enter no of rows:5
*********
*******
*****
***
* 
*/
import java.util.*;
public class main {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        System.out.print("Enter no of rows:");
        int n = s.nextInt();
        for(int i=n-1;i>=0;i--)
        {
            for(int j=1;j<=(2*(i)+1);j++)
            {
                System.out.print("*");
            }
            System.out.println();
        }
        s.close();
    }
    
}
