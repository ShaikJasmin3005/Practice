import java.util.*;
public class main {
    public static void main(String args[]){
     Scanner s= new Scanner(System.in);
     System.out.print("Enter a number:");
     int n = s.nextInt();
     int t = n;
     int re =0;
     while(n > 0){
        int r = n%10;
        re= (re*10)+r;
        n=n/10;
     }
     System.out.println("The reverse of a number "+ t+" is:"+re);
     s.close();
    }
    
}
